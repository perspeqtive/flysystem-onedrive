<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Microsoft\Graph\Graph" id="microsoft.graph.graph"/>

        <service class="Justus\FlysystemOneDrive\OneDriveAdapter" id="justus.flysystem_one_drive.one_drive_adapter">
            <argument key="$graph" id="microsoft.graph.graph" type="service"/>
            <argument key="$drive">%perspeqtive.flysystem.onedrive.drive%</argument>
            <argument key="$httpClient" id="Symfony\Contracts\HttpClient\HttpClientInterface" type="service"/>
            <argument key="$options">%perspeqtive.flysystem.onedrive.options%</argument>
        </service>

    </services>
</container>
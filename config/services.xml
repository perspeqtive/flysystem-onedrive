<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Microsoft\Graph\Graph" id="microsoft.graph.graph"/>

        <service class="PERSPEQTIVE\FlysystemOneDrive\Flysystem\OneDriveAdapter"
                 id="perspeqtive.flysystem_one_drive.flysystem.one_drive_adapter">
            <argument key="$graph" id="microsoft.graph.graph" type="service"/>
            <argument key="$drive">%perspeqtive_flysystem.onedrive.drive%</argument>
            <argument key="$httpClient" id="Symfony\Contracts\HttpClient\HttpClientInterface" type="service"/>
            <argument key="$options">%perspeqtive_flysystem.onedrive.options%</argument>
        </service>

        <service class="PERSPEQTIVE\FlysystemOneDrive\Token\TokenProvider"
                 id="perspeqtive.flysystem_one_drive.token.token_provider">
            <argument key="$httpClient" id="Symfony\Contracts\HttpClient\HttpClientInterface" type="service"/>
        </service>

        <service class="PERSPEQTIVE\FlysystemOneDrive\Flysystem\OneDriveFlysystemFactory"
                 id="perspeqtive.flysystem_one_drive.flysystem.one_drive_flysystem_factory">
            <argument key="$tokenProvider" id="perspeqtive.flysystem_one_drive.token.token_provider" type="service"/>
            <argument key="$httpClient" id="Symfony\Contracts\HttpClient\HttpClientInterface" type="service"/>
            <argument key="$options">%perspeqtive_flysystem.drives%</argument>
        </service>

    </services>
</container>